<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".EmergencyList">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/police"
        android:id="@+id/policeButton"
        android:layout_weight="1"
        android:textSize="30sp"
        android:onClick="onPoliceserviceButton"
        android:background="#ff3842ff"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/ambulance"
        android:id="@+id/ambulanceButton"
        android:layout_weight="1"
        android:textSize="30sp"
        android:onClick="onAmbulanceserviceButton"
        android:background="#ff52bf2e"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/fire"
        android:id="@+id/fireButton"
        android:layout_weight="1"
        android:onClick="onFireserviceButton"
        android:textSize="30sp"
        android:background="#ffff322f"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

</LinearLayout>
